<tr class="align-middle" data-moscouv-id="<%= moscouv.id -%>">
  <td class="text-center align-middle">
    <%= image_tag 'gateway_images/gateway_default.png', alt: 'moscouv', height: height_image, width: width_image , class: 'object-fit-contain p-1 rounded bg-white' %>
  </td>
  <td nowrap class="text-center">
    <%= link_to moscouv.active ? "Ativo" : "Inativo", 
      moscouv.active ? toggle_store_gateway_path(moscouv, kind: 'moscouv') : active_moscouv_store_gateway_path(moscouv),
      method: :get,
      class: "text-white tippy fw-bold btn btn-sm btn-#{moscouv.active? ? 'success' : 'danger'}",
      data: { confirm: t("helpers.confirm"),
              tippy_content: "#{moscouv.active? ? 'Desativar moscouv' : 'Ativar moscouv'}",
              id: moscouv.id} %>
</td>
<td width="200" class="options">
  <% if moscouv.active? %>
    <%= link_to toggle_store_gateway_path(moscouv, kind: "moscouv"), class: 'tippy btn btn-sm btn-danger text-white',
      data: { confirm: 'Qualquer outra configuração ficará inativa. Continuar?', 'tippy-content': "Desativar" } do %>
      <i data-feather="x-circle"></i>
    <% end %>
  <% else %>
    <%= link_to active_moscouv_store_gateway_path(moscouv), class: 'tippy btn btn-sm btn-success text-white',
      data: { confirm: 'Qualquer outra configuração ficará inativa. Continuar?', 'tippy-content': t('.active', default: t("helpers.links.active")) } do %>
      <i data-feather="check-square"></i>
    <% end %>
  <% end %>
  <%= link_to edit_moscouv_store_gateway_path(moscouv), class: 'tippy btn btn-sm btn-primary',
    :'data-tippy-content' => t('.edit', default: t("helpers.links.edit")) do %>
    <i data-feather="edit"></i>
  <% end %>
  <%= link_to destroy_moscouv_store_gateway_path(moscouv), method: :delete, data: { confirm: t("helpers.confirm") }, class: 'tippy btn btn-sm btn-danger text-white',
    :'data-tippy-content' => t('.destroy', default: t("helpers.links.destroy")) do %>
    <i data-feather="trash-2"></i>
  <% end %>
</td>
</tr>
